public class CourseCatalogApp {

    // Course class
    static class Course {
        private String code;
        private String name;
        private String instructor;

        public Course(String code, String name, String instructor) {
            this.code = code;
            this.name = name;
            this.instructor = instructor;
        }

        public String getName() {
            return name;
        }

        @Override
        public String toString() {
            return code + ": " + name + " (Instructor: " + instructor + ")";
        }
    }

    // CourseCatalog class
    static class CourseCatalog {
        private java.util.List<Course> courses;

        public CourseCatalog() {
            courses = new java.util.ArrayList<>();
        }

        public void addCourse(Course course) {
            courses.add(course);
        }

        public java.util.List<Course> searchByName(String keyword) {
            java.util.List<Course> results = new java.util.ArrayList<>();
            keyword = keyword.toLowerCase();

            for (Course course : courses) {
                if (course.getName().toLowerCase().contains(keyword)) {
                    results.add(course);
                }
            }
            return results;
        }

        public void displayAll() {
            for (Course course : courses) {
                System.out.println(course);
            }
        }
    }

    // Main method
    public static void main(String[] args) {
        CourseCatalog catalog = new CourseCatalog();

        // Adding courses
        catalog.addCourse(new Course("CS101", "Introduction to Computer Science", "Dr. Smith"));
        catalog.addCourse(new Course("MATH201", "Linear Algebra", "Prof. Johnson"));
        catalog.addCourse(new Course("CS202", "Data Structures", "Dr. Brown"));

        System.out.println("All Courses:");
        catalog.displayAll();

        System.out.println("\nSearch Results for 'Data':");
        for (Course course : catalog.searchByName("Data")) {
            System.out.println(course);
        }
    }
}
